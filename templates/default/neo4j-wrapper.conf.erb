#********************************************************************
# JVM Parameters
#********************************************************************
 
wrapper.java.additional.1=-Dorg.neo4j.server.properties=<%= @conf_path %>/neo4j-server.properties
wrapper.java.additional.2=-Djava.util.logging.config.file=<%= @conf_path %>/logging.properties

# Initial Java Heap Size (in MB)
wrapper.java.initmemory=<%= node.neo4j.server.jvm.xms %>

# Maximum Java Heap Size (in MB)
wrapper.java.maxmemory=<%= node.neo4j.server.jvm.xmx %>

#********************************************************************
# Wrapper settings
#********************************************************************
# Override default pidfile and lockfile 
wrapper.pidfile=<%= @pid_path %>
wrapper.lockfile=<%= @lock_path %>

# Name of the service
wrapper.name=neo4j-<%= @instance_name %>

# User account to be used for linux installs. Will default to current
# user if not set.
wrapper.user=<%= @user_name %>
